@model List<Ficha>;
    <style>
        div #printArea {
            display: inline-block;
            width: 100%;
            height: auto;
        }
    </style>
<div class="d-block d-print-block">
    @foreach (var x in Model)
    {
    <div id="printArea">
        <p id="inicio" class="text-justify" style="font-size:20px"><b>Nome:   @x.Acampante.Nome</b></p>
        <p class="text-justify"><b>Equipe:   @x.Acampante.Equipe - Cod:   @x.Acampante.codAcampante @x.Acampante.DesPacote SEXO:    - Nasc:   @x.Acampante.DatNascto </b></p>
        <p style="font-size:18px;">
            <div class="row">
                <div class="col-md-6">
                    <b>Peso:  </b> @x.Peso KG <br />
                </div>
                <div class="col-md-6">
                    <b>Altura:  </b> @x.Altura cm<br />
                </div>
            </div>
            <b>Ocorrencia Médica - ligar para:  </b> @x.OcorrenciaMedica<br />
            <div class="row">
                <div class="col-md-6">
                    <b>Tipo sanguíneo:  </b> @x.Tip_Sanguineo<br />
                </div>
                <div class="col-md-6">
                    <b>Convênio:  </b> @x.Convenio<br />
                </div>
            </div>
            <b>Contato pediatra:  </b> @x.Nome_Pediatra_Contato<br />
            <div class="row">
                <div class="col-md-6">
                    <b>Sabe nadar :  </b> @if (x.Nadar == true)
                    {<span>Sim</span> }
                    else
                    { <span>Não</span>}<br />
                </div>
                <div class="col-md-6">
                    <b>Usar boia :  </b> @if (x.Boia == true)
                    {<span>Sim</span> }
                    else
                    { <span>Não</span>}<br />
                </div>
            </div>

            <b>Acompanhamento psicológico :   </b>@if (x.Acomp_Psicologico == true)
            {<span>Sim</span> }
            else
            { <span>Não</span>}<br />
            <b>Motivo :   </b> @x.Motivo_Acomp_Psicologico<br />
            <div class="row">
                <div class="col-md-4">
                    <b>Vacinas válidas :   </b>@if (x.Vacinas_Validas == true)
                    {<span>Sim</span> }
                    else
                    { <span>Não</span>}<br />
                </div>
                <div class="col-md-4">
                    <b>Alopatia :   </b>@if (x.Alopatia == true)
                    {<span>Sim</span> }
                    else
                    { <span>Não</span>}<br />
                </div>
                <div class="col-md-4">
                    <b>Homeopatia :   </b>@if (x.Homeopatia == true)
                    {<span>Sim</span> }
                    else
                    { <span>Não</span>}<br />
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <b>H1N1 :   </b>@if (x.H1N1 == true)
                    {<span>Sim</span> }
                    else
                    { <span>Não</span>}<br />
                </div>
                <div class="col-md-4">
                    <b>Menigite C :   </b>@if (x.MenigiteC == true)
                    {<span>Sim</span> }
                    else
                    { <span>Não</span>}<br />
                </div>
                <div class="col-md-4">
                    <b>Covid :   </b>@if (x.Covid == true)
                    {<span>Sim</span> }
                    else
                    { <span>Não</span>}<br />
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <b>Beliche inferior :   </b>@if (x.BelicheInferior == true)
                    {<span>Sim</span> }
                    else
                    { <span>Não</span>}<br />
                </div>
                <div class="col-md-6">
                    <b>Aparelho dental :   </b>@if (x.Aparelho_Dental == true)
                    {<span>Sim</span> }
                    else
                    { <span>Não</span>}<br />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <b>Dramin :   </b>@if (x.Dramin == true)
                    {<span>Sim</span> }
                    else
                    { <span>Não</span>}<br />
                </div>
                <div class="col-md-6">
                    <b>Vonal :   </b>@if (x.Vonal == true)
                    {<span>Sim</span> }
                    else
                    { <span>Não</span>}<br />
                </div>
            </div>
            <hr />
            <b>Orientação Febre :   </b> @x.Orientacao_Febre<br />
            <b>Orientação Barriga :   </b> @x.Orientacao_Barriga<br />
            <b>Orientação Cabeça :   </b> @x.Orientacao_Cabeca<br />
            <b>Orientação Ouvido :   </b> @x.Orientacao_Ouvido<br />
            <b>Orientação Cólica :   </b> @x.Orientacao_Colica<br />
            <b>Orientação Garganta :   </b> @x.Orientacao_Garganta<br />
            <hr />
            <b>Diabetes :   </b>@if (x.Diabetes == true)
            {<span>Sim</span> }
            else
            { <span>Não</span>}<br />
            <b>Tratamento Diabetes :   </b> @x.Tratamento_Diabetes<br />
            <b>Convulsão :   </b>@if (x.Convulsao == true)
            {<span>Sim</span> }
            else
            { <span>Não</span>}<br />
            <b>Tratamento Convulsão :   </b> @x.Tratamento_Convulsao<br />
            <b>Asma :   </b>@if (x.Asma == true)
            {<span>Sim</span> }
            else
            { <span>Não</span>}<br />
            <b>Tratamento Asma :  </b> @x.Tratamento_Asma<br />
            <b>Bronquite :   </b>@if (x.Bronquite == true)
            {<span>Sim</span> }
            else
            { <span>Não</span>}<br />
            <b>Tratamento Bronquite :  </b> @x.Tratamento_Bronquite<br />
            <b>Sonambulismo :   </b>@if (x.Sonambulismo == true)
            {<span>Sim</span> }
            else
            { <span>Não</span>}<br />
            <b>Enurese noturna :   </b>@if (x.Enurese_Noturna == true)
            {<span>Sim</span> }
            else
            { <span>Não</span>}<br />
            <b>Restrição atividade fisica:   </b>@if (x.RestricaoAttFisica == true)
            {<span>Sim</span> }
            else
            { <span>Não</span>}<br />
            <b>Obs :  </b> @x.Obs_RestricaoAttFisica<br />
            <b>**Alergia:   </b>@if (x.Alergia_Medicamento == "Sim")
            {<span>Sim</span> }
            else
            { <span>Não</span>}<br />
            <b>Obs :  </b> @x.Obs_Alergia_Medicamento<br />
            <b>Necessidade especial:   </b>@if (x.Necessidade_Especial == "Sim")
            {<span>Sim</span> }
            else
            { <span>Não</span>}<br />
            <b>Obs :  </b> @x.Obs_Necessidade_Especial<br />
            <b>Restrição alimentar:   </b>@if (x.Restricao_Alimentar == true)
            {<span>Sim</span> }
            else
            { <span>Não</span>}<br />
            <b>Obs :  </b> @x.Obs_Restricao_Alimentar<br />
            <b>Medo ou fobia:   </b>@if (x.Medo_Fobia == true)
            {<span>Sim</span> }
            else
            { <span>Não</span>}<br />
            <b>Obs :  </b> @x.Obs_Medo_Fobia<br />
            <b>Observação Geral :  </b> @x.Obs_Geral<br />
        </p>
    </div>
    }
</div>
@section Scripts {
    <script>
        window.onload = function () {
            window.print();
        }
    </script>
}