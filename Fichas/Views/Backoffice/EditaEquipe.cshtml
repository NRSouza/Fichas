@model Acampante;
@{
    ViewData["Title"] = "Editar Equipe";
}
<div>
    <div class="text-center">
        <h1 class="display-4">@ViewData["Title"]</h1>
    </div>
    <br />
    <p class="text-center">Defina aqui a equipe do Acampante <b>@Model.Nome</b></p>
    <div class="container">
        <form action="DefinirEquipe" method="post">
            <div class="form-group">
                <label class="col-form-label-lg">Equipe</label>
                @Html.EditorFor(e => e.Equipe, new { htmlAttributes = new { @class = "form-control", @placeholder = "Equipe" } })
                <p style="display:none">@Html.TextBoxFor(e => e.ID, new { htmlAttributes = new { @class = "form-control", @placeholder = "Equipe" } })</p>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>